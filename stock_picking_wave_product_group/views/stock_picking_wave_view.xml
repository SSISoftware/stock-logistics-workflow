<odoo>
    <record id="view_picking_wave_product_group_form" model="ir.ui.view">
        <field name="name">picking.wave.product.group.form</field>
        <field name="model">stock.picking.wave</field>
        <field name="inherit_id" ref="stock.view_picking_wave_form"/>
        <field name="arch" type="xml">
            <field name="picking_ids" position="after">
                <field name="pack_operation_ids" widget="many2many" domain="[('state', 'not in', ('done', 'cancel'))]" options="{'not_delete': True}">
                    <tree>
                        <field name="name"/>
                        <field name="backorder_id"/>
                        <field name="origin"/>
                        <field name="date"/>
                        <field name="min_date"/>
                        <field name="state"/>
                        <button name="action_assign" string="Confirm picking" type="object" icon="gtk-apply" attrs="{'invisible': [('state', 'in', ('done', 'cancel', 'confirmed', 'assigned'))]}"/>
                        <button name="force_assign" string="Force availability" type="object" icon="gtk-go-forward" attrs="{'invisible': [('state', 'in', ('done', 'cancel', 'draft', 'assigned'))]}"/>
                        <button name="action_cancel" string="Cancel picking" type="object" icon="gtk-cancel" attrs="{'invisible': [('state', 'in', ('done', 'cancel'))]}"/>
                    </tree>
                </field>
            </field>
        </field>
    </record>
</odoo>
